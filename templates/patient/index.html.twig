{% extends 'base.html.twig' %}

{% block title %}Liste des Projets {% endblock %}
{% block body %}
<div class='d-flex justify-content-between align-items-center my-4 mx-5'>

    <h1>Liste des Projets</h1>
<a class="btn btn-primary"  href="{{ path('app_patient_new') }}">Create new</a>
</div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Durée</th>
                <th>Prérequis</th>
                <th>Contenu</th>
                <th>actions</th>
              
            </tr>
        </thead>
        <tbody>
        {% for patient in patients %}
            <tr>
                <td>{{ patient.id }}</td>
                <td>{{ patient.nom }}</td>
                <td>{{ patient.duree}}</td>
                <td>{{ patient.prerequis }}</td>
                <td>{{ patient.contenu }}</td>
               
                <td>
                    <a class="btn btn-success" href="{{ path('app_patient_show', {'id': patient.id}) }}">show</a>
                   
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
